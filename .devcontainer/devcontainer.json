{
    "dockerFile": "Dockerfile",
    "remoteUser": "opam",
    "extensions": [ "ocamllabs.ocaml-platform" ],
    "forwardPorts": [8080, 80],
    "mounts": ["source=${localEnv:HOME}/.ssh,target=/home/opam/.ssh,type=bind,readonly,consistency=cached"]
}